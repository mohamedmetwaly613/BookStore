@model BookStore.ViewModels.BookAuthorViewModel

@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Edit Book</h2>
<br />

<div class="border container" style="padding:30px;">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-3 text-sm-start">
                <label asp-for="BookId"></label>
            </div>
            <div class="col-6">
                <input readonly asp-for="BookId" class="form-control" />
            </div>
            <span asp-validation-for="BookId" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-3 text-sm-start">
                <label asp-for="Title"></label>
            </div>
            <div class="col-6">
                <input asp-for="Title" class="form-control" />
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-3 text-sm-start">
                <label asp-for="Description"></label>
            </div>
            <div class="col-6">
                <input asp-for="Description" class="form-control" />
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-3 text-sm-start">
                <label asp-for="File"></label>
            </div>
            <div class="col-6">
                <img src="~/uploads/@Model.ImageUrl" style="width:124px;" class="img-thumbnail" />
                <input type="file" name="File" asp-for="File" class="form-control" />
            </div>
            <span asp-validation-for="File" class="text-danger"></span>
           
        </div>
        <br />
        <input type="hidden" asp-for="ImageUrl" class="form-control" />
        <div class="form-group row">
            <div class="col-3 text-sm-start">
                <label asp-for="AuthorId">Author Name</label>
            </div>
            <div class="col-6">
                <select asp-for="AuthorId" class="form-control"
                        asp-items="@(new SelectList(Model.Authors, "Id", "FullName"))"></select>
            </div>
            <span asp-validation-for="AuthorId" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Save" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts
 {
    <partial name="_validation" />
}
