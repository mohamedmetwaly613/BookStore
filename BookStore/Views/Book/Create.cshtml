@model BookStore.ViewModels.BookAuthorViewModel

@{
    ViewData["Title"] = "Create";
}
<br />
<h2 class="text-info">Create New Book</h2>
<br />

<div class="border container" style="padding:30px;">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (ViewBag.Message != null)
        {
            <h5 class="alert alert-danger">@ViewBag.Message</h5>
        }

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Title"></label>
            </div>
            <div class="col-6">
                <input asp-for="Title" class="form-control" />
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Description"></label>
            </div>
            <div class="col-6">
                <input asp-for="Description" class="form-control" />
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="File"></label>
            </div>
            <div class="col-6">
                <input type="file" name="File" asp-for="File" class="form-control" />
            </div>
            <span asp-validation-for="File" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="AuthorId"></label>
            </div>
            <div class="col-6">
                <select asp-for="AuthorId" class="form-control"
                        asp-items="@(new SelectList(Model.Authors, "Id", "FullName"))"></select>
            </div>
            <span asp-validation-for="AuthorId" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts
 {
    <partial name="_validation" />
}
